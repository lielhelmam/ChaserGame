<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/JoinGamePage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:padding="24dp">

    <!-- ===== TITLE ===== -->

    <TextView
        android:id="@+id/tvJoinTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Join Game"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp"/>

    <!-- ===== JOIN CARD ===== -->

    <androidx.cardview.widget.CardView
        android:id="@+id/joinCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvJoinTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Room Code"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etRoomCode"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="ABC123"
                android:textAllCaps="true"
                android:inputType="text"
                android:textColor="#000000"
                android:textColorHint="#888888"
                android:backgroundTint="#C62828"
                android:padding="12dp"
                android:textSize="18sp"
                android:layout_marginBottom="24dp"/>

            <Button
                android:id="@+id/btnJoinRoom"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Join Game"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:backgroundTint="#333333"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
