<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B71C1C"
    android:padding="24dp"
    tools:context=".screens.SecretGameRuelsActivity">

    <!-- ===== TITLE ===== -->
    <TextView
        android:id="@+id/tv_rules_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Rhythm Game Rules"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- ===== RULES CARD ===== -->
    <androidx.cardview.widget.CardView
        android:id="@+id/rulesCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_start_secret_game"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_rules_title">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_rules_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:lineSpacingExtra="6dp"
                android:text="• Song Selection: Choose your favorite track from the list to start playing.\n\n• Gameplay: Two target cubes are located at the bottom of the screen.\n\n• Falling Notes: Circles will fall from the top in perfect rhythm with the music.\n\n• Timing is Key: Tap the cubes exactly when a circle overlaps them.\n\n• Duration: The game continues until the end of the song, with circles falling in perfect rhythm throughout.\n\n• Scoring System:\n   - Perfect Hit: +300 Points\n   - Good Hit: +100 Points (Close timing)\n   - Miss: 0 Points\n\n• Objective: Reach the target score by the end of the song to pass the level!"
                android:textColor="#333333"
                android:textSize="17sp" />
        </ScrollView>
    </androidx.cardview.widget.CardView>

    <!-- ===== BUTTONS ===== -->
    <Button
        android:id="@+id/btn_start_secret_game"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="#333333"
        android:text="Choose Song &amp; Play"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_back_to_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_back_to_main"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginBottom="4dp"
        android:backgroundTint="#66000000"
        android:text="Back to Main"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>