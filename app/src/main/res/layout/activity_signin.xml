<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/LoginText"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.SigninActivity">

    <TextView
        android:id="@+id/SighinText"
        android:layout_width="338dp"
        android:layout_height="47dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="77dp"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="608dp"
        android:text="Sign in to the game"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/EnterUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="65dp"
        tools:layout_editor_absoluteY="186dp" />

    <EditText
        android:id="@+id/EnterPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="63dp"
        tools:layout_editor_absoluteY="315dp" />

    <EditText
        android:id="@+id/EnterEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteX="65dp"
        tools:layout_editor_absoluteY="428dp" />

    <EditText
        android:id="@+id/EnterPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="phone"
        tools:layout_editor_absoluteX="64dp"
        tools:layout_editor_absoluteY="565dp" />

    <TextView
        android:id="@+id/EnterUserNameText"
        android:layout_width="148dp"
        android:layout_height="20dp"
        android:text="Enter UserName"
        tools:layout_editor_absoluteX="75dp"
        tools:layout_editor_absoluteY="158dp" />

    <TextView
        android:id="@+id/EnterPasswordText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Password"
        tools:layout_editor_absoluteX="83dp"
        tools:layout_editor_absoluteY="279dp" />

    <TextView
        android:id="@+id/EnterEmailText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Email"
        tools:layout_editor_absoluteX="82dp"
        tools:layout_editor_absoluteY="398dp" />

    <TextView
        android:id="@+id/EnterPhoneNumberText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter PhoneNumber"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="530dp" />

    <Button
        android:id="@+id/SubmitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        tools:layout_editor_absoluteX="120dp"
        tools:layout_editor_absoluteY="637dp" />
</androidx.constraintlayout.widget.ConstraintLayout>