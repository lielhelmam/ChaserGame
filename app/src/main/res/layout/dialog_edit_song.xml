<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_edit_song_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Song Name"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/et_edit_song_difficulty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Difficulty (Easy/Medium/Hard)"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/et_edit_song_res_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Raw Resource Name (e.g. song1)"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/et_edit_target_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Target Score"
            android:inputType="number"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Beatmap (time,lane;time,lane...)"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/et_edit_beatmap"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:gravity="top"
            android:hint="1000,0;1500,1"
            android:inputType="textMultiLine"/>

    </LinearLayout>
</ScrollView>
