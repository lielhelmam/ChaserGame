<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/MainPage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B71C1C"
    android:padding="24dp">

    <!-- ===== TOP BAR ===== -->

    <TextView
        android:id="@+id/text_main_hitouser"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hi, Username"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_main_logout"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btn_main_logout"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="âŽ‹"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#66000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ===== TITLE ===== -->

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Choose how you want to play"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/text_main_hitouser"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <!-- ===== GAME MODES CARD ===== -->

    <androidx.cardview.widget.CardView
        android:id="@+id/modesCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <Button
                android:id="@+id/btn_main_playagainstabot"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="ðŸ¤– Against a Bot"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:backgroundTint="#C62828"
                android:layout_marginBottom="12dp"/>

            <Button
                android:id="@+id/btn_main_playonline"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="ðŸŒ Online Game"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:backgroundTint="#333333"
                android:layout_marginBottom="12dp"/>

            <Button
                android:id="@+id/btn_main_playononedevice"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="ðŸ“± One Device"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:backgroundTint="#C62828"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- ===== PROFILE ===== -->

    <Button
        android:id="@+id/btn_main_edit_profile"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Edit Profile"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#66000000"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/modesCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
